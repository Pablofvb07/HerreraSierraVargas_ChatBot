<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - HerreraSierraVargasCHATBOT</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/HerreraSierraVargas_ChatBot.styles.css" asp-append-version="true" />
</head>
<body>
	<div class="d-flex flex-column min-vh-100">

		<!-- NAVBAR -->
		<header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
				<div class="container-fluid">
					<a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">HerreraSierraVargasChatBot</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav ms-auto">
							<li class="nav-item">
								<a class="nav-link active" asp-controller="Home" asp-action="Index">Inicio</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacidad</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-controller="ChatHistorial" asp-action="Index">Historial</a>
							</li>

						</ul>
					</div>
				</div>
			</nav>
		</header>

		<!-- CONTENIDO PRINCIPAL -->
		<main class="flex-grow-1">
			<div class="container py-4">
				@RenderBody()
			</div>
		</main>

		<!-- FOOTER -->
		<footer class="text-white py-3" style="background-color: #0d6efd;">
			<div class="container text-center">
				&copy; 2025 - HerreraSierraVargasChatBot -
				<a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
			</div>
		</footer>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
